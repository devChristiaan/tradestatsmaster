<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="600.0" maxWidth="600.0" style="-fx-background-color: -color-bg-default;"
      xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.controller.AddTransactionDialog">
    <AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
                xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Text layoutX="43.0" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add a new Trade:"
                  wrappingWidth="184.0859375">
                <font>
                    <Font size="18.0"/>
                </font>
            </Text>
            <Label layoutX="358.0" layoutY="14.0" text="Date">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <DatePicker fx:id="date" layoutX="358.0" layoutY="39.0" prefHeight="25.0" prefWidth="152.0"/>
            <Separator layoutX="43.0" layoutY="156.0" prefHeight="3.0" prefWidth="465.0"/>
            <RadioButton fx:id="longEntry" layoutX="52.0" layoutY="111.0" mnemonicParsing="false"
                         onAction="#selectEntry" prefHeight="30.0" prefWidth="99.0" text="Long">
                <toggleGroup>
                    <ToggleGroup fx:id="entry"/>
                </toggleGroup>
                <font>
                    <Font size="14.0"/>
                </font>
            </RadioButton>
            <RadioButton fx:id="shortEntry" layoutX="172.0" layoutY="111.0" mnemonicParsing="false"
                         onAction="#selectEntry" prefHeight="30.0" prefWidth="86.0" text="Short" toggleGroup="$entry">
                <font>
                    <Font size="14.0"/>
                </font>
            </RadioButton>
            <Label layoutX="358.0" layoutY="91.0" text="Symbol">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Separator layoutX="43.0" layoutY="73.0" prefHeight="3.0" prefWidth="465.0"/>
            <ChoiceBox fx:id="symbol" layoutX="355.0" layoutY="116.0" prefHeight="25.0" prefWidth="152.0"/>
            <Separator layoutX="48.0" layoutY="247.0" prefHeight="3.0" prefWidth="465.0"/>
            <Text layoutX="358.0" layoutY="282.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Close" translateX="1.0"
                  translateY="2.0">
                <font>
                    <Font size="14.0"/>
                </font>
            </Text>
            <Label layoutX="51.0" layoutY="180.0" text="Formation">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <ChoiceBox fx:id="formations" layoutX="51.0" layoutY="206.0" prefHeight="25.0" prefWidth="208.0"/>
            <Label layoutX="355.0" layoutY="180.0" text="Quantity">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="quantity" layoutX="358.0" layoutY="205.0" onKeyTyped="#setQuantity" prefHeight="25.0"
                       prefWidth="152.0"/>
            <Text layoutX="48.0" layoutY="278.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Open" translateX="5.0"
                  translateY="7.0">
                <font>
                    <Font size="14.0"/>
                </font>
            </Text>
            <TextField fx:id="openAmount" layoutX="46.0" layoutY="286.0" onKeyTyped="#setOpenAmount" prefHeight="25.0"
                       prefWidth="208.0" translateX="5.0" translateY="7.0"/>
            <TextField fx:id="closeAmount" layoutX="357.0" layoutY="296.0" onKeyTyped="#setCloseAmount"
                       prefHeight="25.0" prefWidth="152.0" translateX="1.0" translateY="-3.0"/>
            <Separator layoutX="53.0" layoutY="335.0" prefHeight="3.0" prefWidth="465.0"/>
            <Label layoutX="56.0" layoutY="368.0" text="ATR">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="ATR" layoutX="52.0" layoutY="391.0" onKeyTyped="#setATR" prefHeight="25.0"
                       prefWidth="208.0"/>
            <Label layoutX="355.0" layoutY="364.0" text="Time Period">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="timePeriod" layoutX="356.0" layoutY="391.0" onKeyTyped="#setPossibleLossTicks"
                       prefHeight="25.0" prefWidth="152.0"/>
            <Label layoutX="52.0" layoutY="438.0" text="Possible Loss Ticks">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="possibleLossTicks" layoutX="53.0" layoutY="465.0" onKeyTyped="#setPossibleLossTicks"
                       prefHeight="25.0" prefWidth="208.0"/>
            <Label layoutX="358.0" layoutY="441.0" text="Possible Profit Ticks">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="possibleProfitTicks" layoutX="355.0" layoutY="465.0" onKeyTyped="#setPossibleProfitTicks"
                       prefHeight="25.0" prefWidth="152.0"/>
            <Separator layoutX="53.0" layoutY="510.0" prefHeight="3.0" prefWidth="465.0"/>
            <ButtonBar layoutX="161.0" layoutY="528.0" prefHeight="40.0" prefWidth="248.0">
                <buttons>
                    <Button fx:id="save" defaultButton="true" mnemonicParsing="false" onAction="#saveTransaction"
                            prefHeight="25.0" prefWidth="121.0" text="Save"/>
                    <Button cancelButton="true" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0"
                            prefWidth="121.0" text="Cancel"/>
                </buttons>
            </ButtonBar>
        </children>
    </AnchorPane>
</VBox>
