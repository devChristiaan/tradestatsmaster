<VBox maxHeight="400.0" maxWidth="600.0" style="-fx-background-color: -color-bg-default;"
      xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.controller.AddGoalDialogController">
    <AnchorPane prefHeight="400.0" prefWidth="600.0">
        <children>
            <Text layoutX="44.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add Goal"
                  wrappingWidth="184.0859375">
                <font>
                    <Font size="18.0"/>
                </font>
            </Text>
            <Text layoutX="44.0" layoutY="51.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Select a date and time horizon. Validation will be done when date is selected. You can only add 1 Goal item per time horizon."
                  translateY="30.0" wrappingWidth="184.0859375">
                <font>
                    <Font size="14.0"/>
                </font>
            </Text>
            <Label layoutX="357.0" layoutY="26.0" text="Date">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
            <DatePicker fx:id="date" layoutX="357.0" layoutY="57.0" prefHeight="40.0" prefWidth="184.0"/>
            <Separator layoutX="7.0" layoutY="183.0" prefHeight="1.0" prefWidth="592.0"/>
            <ChoiceBox fx:id="timeHorizon" layoutX="357.0" layoutY="237.0" prefHeight="27.0" prefWidth="184.0"/>
            <Label layoutX="357.0" layoutY="212.0" text="Select Goal Time Horizon">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Text layoutX="44.0" layoutY="227.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Short term: Weekly"
                  wrappingWidth="184.0859375">
                <font>
                    <Font size="14.0"/>
                </font>
            </Text>
            <Text layoutX="44.0" layoutY="253.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Mid term: Monthly"
                  wrappingWidth="184.0859375">
                <font>
                    <Font size="14.0"/>
                </font>
            </Text>
            <Text layoutX="44.0" layoutY="277.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Long term: Semi annually"
                  wrappingWidth="184.0859375">
                <font>
                    <Font size="14.0"/>
                </font>
            </Text>
            <VBox fx:id="errorContainer" layoutX="357.0" layoutY="106.0" prefHeight="71.0" prefWidth="239.0"/>
            <Separator layoutX="4.0" layoutY="309.0" prefHeight="1.0" prefWidth="592.0"/>
            <ButtonBar layoutX="158.0" layoutY="335.0" prefHeight="40.0" prefWidth="248.0">
                <buttons>
                    <Button fx:id="save" defaultButton="true" mnemonicParsing="false" onAction="#saveGoal"
                            prefHeight="25.0" prefWidth="121.0" text="Save"/>
                    <Button cancelButton="true" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0"
                            prefWidth="121.0" text="Cancel"/>
                </buttons>
            </ButtonBar>
        </children>
    </AnchorPane>
</VBox>
